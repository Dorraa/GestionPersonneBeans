<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Afficher</servlet-name>
        <servlet-class>com.Servlet.Afficher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ajouter</servlet-name>
        <servlet-class>com.Servlet.Ajouter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecupID</servlet-name>
        <servlet-class>com.Servlet.RecupID</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecupPers</servlet-name>
        <servlet-class>com.Servlet.RecupPers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Supprimer</servlet-name>
        <servlet-class>com.Servlet.Supprimer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Afficher</servlet-name>
        <url-pattern>/Afficher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ajouter</servlet-name>
        <url-pattern>/Ajouter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecupID</servlet-name>
        <url-pattern>/RecupID</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecupPers</servlet-name>
        <url-pattern>/RecupPers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Supprimer</servlet-name>
        <url-pattern>/Supprimer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
